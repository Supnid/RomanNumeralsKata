package main;

import java.util.ArrayList;

public class ArabicToRomanConverter {

	public String convert(int input) {
		if(input > 3999 || input < 1){
			return "The number you entered could not be converted. Please try another number.";
		}
		
		String romanNumeral = new String();
		Map<String, int> romanNumeralToArabicNumeralMap = new Map<String, int>();
		
		while(input >= 1000){
			romanNumeral += "M";
			input -= 1000;
		}
		while(input >= 900){
			romanNumeral += "CM";
			input -= 900;
		}
		while(input >= 500){
			romanNumeral += "D";
			input -= 500;
		}
		while(input >= 400){
			romanNumeral += "CD";
			input -= 400;
		}
		while(input >= 100){
			romanNumeral += "C";
			input -= 100;
		}
		while(input >= 90){
			romanNumeral += "XC";
			input -= 90;
		}
		while(input >= 50){
			romanNumeral += "L";
			input -= 50;
		}
		while(input >= 40){
			romanNumeral += "XL";
			input -= 40;
		}
		while(input >= 10){
			romanNumeral += "X";
			input -= 10;
		}
		while(input >= 9){
			romanNumeral += "IX";
			input -= 9;
		}
		while(input >= 5){
			romanNumeral += "V";
			input -= 5;
		}
		while(input >= 4){
			romanNumeral += "IV";
			input -= 4;
		}
		if(input > 0){
			for(int i = 0; i < input; i++)
				romanNumeral += "I";
		}
		
		return romanNumeral;
	}

}
