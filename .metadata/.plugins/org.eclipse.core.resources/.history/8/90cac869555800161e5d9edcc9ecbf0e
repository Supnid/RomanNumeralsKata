package main;

public class ArabicToRomanConverter {

	public String convert(int input) {
		System.out.println("---------------------------");
		String romanNumeral = new String();
		
		System.out.println(input);
		
		if(input >= 1000){
			romanNumeral += "M";
			input -= 1000;
			System.out.println(input);
		}if(input == 500){
			romanNumeral += "D";
		}if(input == 100){
			romanNumeral += "C";
		}if(input == 50){
			romanNumeral += "L";
		}if(input == 10){
			romanNumeral += "X";
		}if(input == 5){
			romanNumeral += "V";
		}if(input == 4){
			romanNumeral += "IV";
		}if(input > 0){
			for(int i = 0; i < input; i++)
				romanNumeral += "I";
		}
		
		System.out.println("---------------------------");
		
		return romanNumeral;
	}

}
